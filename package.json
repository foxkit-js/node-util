{
  "name": "@foxkit/util-modules",
  "version": "0.0.0",
  "description": "Nodejs Utility ES Modules",
  "main": "index.js",
  "repository": "git@github.com:foxkit-js/foxkit-util-modules.git",
  "author": "Mitsunee",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./fs": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier -w .",
    "prebuild": "eslint src/**",
    "build": "rollup -c",
    "postbuild": "mocha",
    "prepare": "simple-git-hooks",
    "dev": "rollup -c -w",
    "publish": "yarn build && clean-publish --fields scripts --files src"
  },
  "eslintConfig": {
    "extends": "@foxkit"
  },
  "prettier": "@foxkit/internal/prettier",
  "browserslist": [
    "maintained node versions"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "directories": {
    "dist": "dist"
  },
  "devDependencies": {
    "@foxkit/eslint-config": "^1.0.2",
    "@foxkit/internal": "^2.1.0",
    "clean-publish": "^3.4.4",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "simple-git-hooks": "^2.7.0"
  }
}
